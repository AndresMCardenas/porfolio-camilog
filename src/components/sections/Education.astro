---
import Section from "../Sections.astro";
import { education } from "../../../cv.json";
---

<Section title="Education" description="This is the expirience section">
  <ul>
    {
      education.map(({ institution, title, endDate, startDate, area }) => (
        <li>
          <article>
            <header>
              <div>
                <h3>{institution}</h3>
                <h4>{title}</h4>
              </div>

              <time>
                {startDate} - {endDate}
              </time>
            </header>

            <footer>
              <p>{area}</p>
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 32px;
  }

  h3 {
    color: #111;
    font-weight: 700;
    font-size: 1.2rem;
  }

  h4 {
    font-size: 1.1rem;
    color: #222;
    font-weight: 400;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }

  time {
    color: #666;
    font-size: 0.9rem;
  }
  p {
    color: #666;
    font-size: 1rem;
    margin-bottom: 1rem;
    text-align: justify;
  }
</style>
