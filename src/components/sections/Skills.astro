---
import Section from "../Sections.astro";
import { skills } from '../../../cv.json'
 
---

<Section title="Skills" description="This is the skills section">

  <ul>{
    skills.map(({name}) => (
      <li>
        <span>{name}</span>
      </li>
    ))
  }
  </ul>
</Section>

<style>
  ul {
    padding: 8px;
    display: inline-flex;
    flex-wrap: wrap;
  }
  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: .9rem;
    margin: 0.25rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>