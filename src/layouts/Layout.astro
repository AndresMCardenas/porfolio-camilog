---
const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cv Camilo Guerrero un profecional del BPO" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		letter-spacing: -0.02em;
	}

	body {
		margin: 0;
		padding: 0;
		background: #fdf0f0;
	}
	<div class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"><div class="absolute left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-fuchsia-400 opacity-20 blur-[100px]"></div></div>

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	*, *::before, *::after{
		box-sizing: border-box;
	}

	h1 h2 h3 h4 h5 h6 {
		margin: 0;
		font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
	}
	
	p {
		color: #777;
		font-size: .8rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}

	@media print {
		.no-print {
			display: none !important;
		}
	}

	.print {
		display: none !important;
	}

	@media print {
		.print {
			display: block !important;
		}
	}

</style>
